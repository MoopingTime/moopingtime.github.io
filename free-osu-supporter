  <script>
    function sleep(ms) {
      return new Promise(resolve => setTimeout(resolve, ms));
    }

    async function startTroll() {
      const username = document.getElementById("username").value.trim();
      const duration = document.getElementById("duration").value;
      const statusBox = document.getElementById("status");

      const mainContent = document.getElementById("mainContent");
      const finalImage = document.getElementById("finalImage");

      if (!username) {
        alert("Please enter your osu! username.");
        return;
      }

      statusBox.innerText = "Connecting to osu! servers...";
      await sleep(1000);
      statusBox.innerText += "\nAuthenticating API tokens...";
      await sleep(1200);
      statusBox.innerText += `\nFetching user data for: ${username}...`;
      await sleep(1000);
      statusBox.innerText += `\nApplying supporter (${duration})...`;
      await sleep(1500);
      statusBox.innerText += `\n\nERROR: osu!server rejected request.`;
      await sleep(1200);
      statusBox.innerText += `\nReason: haha you got scammed!!!!`;
      await sleep(1000);

      // Switch to fullscreen image troll
      mainContent.style.display = "none";
      finalImage.style.display = "flex";
    }
  </script>
